<%= form_with model: @post, local: true, class: 'mt-4' do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
    </div>
  
    <div class="mb-3">
      <%= form.label :content, class: 'form-label' %>
      <%= form.text_area :content, class: 'form-control', rows: 5, placeholder: 'Enter content' %>
    </div>
  
    <div class="mt-3">
      <%= form.submit class: 'btn btn-success' %>
      <%= link_to 'Cancel', posts_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
  