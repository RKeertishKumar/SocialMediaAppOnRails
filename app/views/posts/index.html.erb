<div class="container">
  <div class="text-center mb-5">
    <h1>Feed</h1>
    <p>Be honest and frank anyway</p>
    <div>
    <%= link_to 'Create New Post', new_post_path, class: 'btn btn-success btn-create' %>
    </div>
  </div>
  <div class="empty-space"></div>

  <% @posts.each do |post| %>
    <div class="card">
      <h5><%= post.title %></h5>
      <p><%= post.content %></p>
      <div class="d-flex flex-column align-items-start mt-3">
        <div>
          <%= link_to 'View', post_path(post), class: 'btn btn-primary mb-2' %>
          <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning mb-2' %>
        </div>
        <div>
          <%= button_to 'Delete', post_path(post), method: :delete, class: 'btn btn-danger btn-delete', data: { confirm: 'Are you sure you want to delete this item?' } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
