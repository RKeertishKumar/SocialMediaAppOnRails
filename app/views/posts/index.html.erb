<h1>All Posts</h1>
<%= link_to 'New Post', new_post_path %>

<ul>
  <% @posts.each do |post| %>
    <li>
      <strong><%= link_to post.title, post_path(post) %></strong>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= button_to 'Delete', post_path(post), method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this post?' } %>
    </li>
  <% end %>
</ul>
